{

  "compilerOptions": {

    "module": "commonjs",

    "target": "es2020",

    "strict": true,

    "esModuleInterop": true,

    "declaration": true,

    "outDir": "./dist",

    "sourceMap": true,

    "skipLibCheck": true,

    "forceConsistentCasingInFileNames": true

  },

  "include": ["src"],

  "exclude": ["node_modules", "dist"]

}